<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCV1_AhoraSi.MainPage">

    <StackLayout Background="#808080">
        <Label x:Name="lbl_principal"
               Text="Bienvenido a creador de CV's 100% Real no fake"
               FontSize="Medium"
               Margin="8"/>

        <ProgressBar x:Name="progress"
                     Progress=".5"/>
        <Grid>
            <Label x:Name="lbl_progress"
                   Text="0%"
                   FontSize="Large"/>
            <Switch x:Name="sw_example"/>
        </Grid>
        <Frame>
            <StackLayout>
                <Entry x:Name="lbl_nombre"
                       Placeholder="Ingrese su nombre"
                       FontSize="Medium"/>
                <Entry x:Name="lbl_correo"
                       Placeholder="Ingrese su correo"
                       FontSize="medium"/>
            </StackLayout>
        </Frame>
        <Button x:Name="btn_enviar"
                Text="Enviar Datos"
                FontSize="Large"
                Clicked="btn_enviar_Clicked"/>
    </StackLayout>

</ContentPage>
